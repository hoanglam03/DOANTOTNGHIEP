@{
    ViewBag.Title = "Truy cập bị từ chối";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="py-4">
    <div class="d-flex justify-content-between w-100 flex-wrap">
        <div class="mb-3 mb-lg-0">
            <h1 class="h4">Truy cập bị từ chối</h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-light shadow-sm">
            <div class="card-body">
                <div class="text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-5x text-danger mb-4"></i>
                    <h2 class="h3 mb-4">Bạn không có quyền truy cập trang này</h2>
                    <p class="text-gray mb-4">Vui lòng liên hệ quản trị viên nếu bạn cần quyền truy cập.</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="fas fa-home mr-2"></i> Quay lại trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
