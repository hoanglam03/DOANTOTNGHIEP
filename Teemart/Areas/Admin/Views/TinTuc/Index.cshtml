@model IEnumerable<Nhom9.Models.TinTuc>

@{
    ViewBag.Title = "Quản lý tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý tin tức</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", "TinTuc", new { area = "Admin" }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TieuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTaNgan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayDang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TieuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTaNgan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDang)
            </td>
            <td>
                @(item.IsActive ? "Hiển thị" : "Ẩn")
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTin }, new { @class = "btn btn-sm btn-warning" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTin }, new { @class = "btn btn-sm btn-info" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTin }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
</table>