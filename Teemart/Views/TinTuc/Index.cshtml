@model IEnumerable<Nhom9.Models.TinTuc>

@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đảm bảo có layout chung
}

<div class="news-container">
    <div class="news-header">
        <h2 class="news-title">Tin tức mới nhất</h2>
        <div class="news-filter">
            <!-- Có thể thêm bộ lọc tin tức ở đây nếu cần -->
        </div>
    </div>

    <div class="news-list">
        @foreach (var item in Model)
        {
            <div class="news-card">
                <div class="news-card-image">
                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                    {
                        <img src="@Url.Content("~/" + item.HinhAnh)" alt="@item.TieuDe" class="img-responsive" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/Images/default-news.jpg")" alt="Tin tức mặc định" class="img-responsive" />
                    }


                </div>
                <div class="news-card-content">
                    <div class="news-meta">
                        <span class="news-date"><i class="far fa-calendar-alt"></i> @item.NgayDang.ToString("dd/MM/yyyy")</span>
                        <!-- Có thể thêm các meta khác như tác giả, chuyên mục... -->
                    </div>
                    <h3 class="news-card-title">
                        @Html.ActionLink(item.TieuDe, "Details", new { id = item.MaTin })
                    </h3>
                    <p class="news-excerpt">@item.MoTaNgan</p>
                    <div class="news-read-more">
                        @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaTin }, new { @class = "btn btn-read-more" })
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Phân trang nếu cần -->
    @*<div class="news-pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>*@
</div>

<style>
    /* CSS cho trang tin tức */
    .news-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .news-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .news-title {
        color: #2c3e50;
        font-weight: 700;
        position: relative;
        padding-bottom: 15px;
    }

    .news-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: #3498db;
    }

    .news-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 30px;
    }

    .news-card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .news-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .news-card-image {
        height: 200px;
        overflow: hidden;
    }

    .news-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .news-card:hover .news-card-image img {
        transform: scale(1.05);
    }

    .news-card-content {
        padding: 20px;
    }

    .news-meta {
        margin-bottom: 10px;
        color: #7f8c8d;
        font-size: 14px;
    }

    .news-date {
        margin-right: 15px;
    }

    .news-card-title {
        margin: 0 0 15px 0;
        font-size: 1.4rem;
        line-height: 1.3;
    }

    .news-card-title a {
        color: #2c3e50;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .news-card-title a:hover {
        color: #3498db;
    }

    .news-excerpt {
        color: #34495e;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    .btn-read-more {
        display: inline-block;
        padding: 8px 20px;
        background: #3498db;
        color: white;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.3s ease;
    }

    .btn-read-more:hover {
        background: #2980b9;
        color: white;
    }

    .news-pagination {
        margin-top: 40px;
        text-align: center;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .news-list {
            grid-template-columns: 1fr;
        }
        
        .news-card-image {
            height: 160px;
        }
    }
</style>

@section scripts {
    <!-- Font Awesome cho icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}