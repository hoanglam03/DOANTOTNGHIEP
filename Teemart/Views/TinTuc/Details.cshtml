@model Nhom9.Models.TinTuc

@{
    ViewBag.Title = Model.TieuDe;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="news-detail-container">
    <div class="news-detail-header">
        <div class="news-breadcrumb">
            @Html.ActionLink("Trang chủ", "Index", "Home") /
            @Html.ActionLink("Tin tức", "Index") /
            <span>Chi tiết</span>
        </div>
        <h1 class="news-detail-title">@Model.TieuDe</h1>

        <div class="news-meta">
            <span class="news-date"><i class="far fa-clock"></i> @Model.NgayDang.ToString("dd/MM/yyyy HH:mm")</span>
            <!-- Có thể thêm tác giả, lượt xem... -->
            <span class="news-views"><i class="far fa-eye"></i> 1.2K lượt xem</span>
        </div>
    </div>

    <div class="news-detail-content">
        <div class="news-featured-image">
            <img src="@Url.Content("~/" + (string.IsNullOrEmpty(Model.HinhAnh) ? "default-news.jpg" : Model.HinhAnh))"
                 alt="@Model.TieuDe" class="img-responsive" />
            @if (!string.IsNullOrEmpty(Model.MoTaNgan))
            {
                <div class="image-caption">@Model.MoTaNgan</div>
            }
        </div>

        <div class="news-body">
            @Html.Raw(Model.NoiDung)
        </div>

        <!-- Có thể thêm phần tag hoặc chuyên mục -->
        <div class="news-tags">
            <span><i class="fas fa-tags"></i> Tags:</span>
            <a href="#">Thể thao</a>,
            <a href="#">Giải trí</a>
        </div>

        <!-- Phần chia sẻ mạng xã hội -->
        <div class="news-social-share">
            <span>Chia sẻ:</span>
            <a href="#" class="social-btn facebook"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="social-btn twitter"><i class="fab fa-twitter"></i></a>
            <a href="#" class="social-btn linkedin"><i class="fab fa-linkedin-in"></i></a>
            <a href="#" class="social-btn zalo"><img src="https://cdn-icons-png.flaticon.com/512/3670/3670157.png" alt="Zalo" width="16"></a>
        </div>
    </div>

    <div class="news-back-button">
        @Html.ActionLink("Quay lại danh sách tin tức", "Index", null, new { @class = "btn btn-back" })
    </div>
</div>

<style>
    /* CSS cho trang chi tiết tin tức */
    .news-detail-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        line-height: 1.6;
    }

    .news-breadcrumb {
        font-size: 0.9rem;
        color: #7f8c8d;
        margin-bottom: 15px;
    }

        .news-breadcrumb a {
            color: #3498db;
            text-decoration: none;
        }

            .news-breadcrumb a:hover {
                text-decoration: underline;
            }

    .news-detail-title {
        color: #2c3e50;
        font-size: 2rem;
        margin-bottom: 15px;
        line-height: 1.3;
    }

    .news-meta {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 25px;
        color: #7f8c8d;
        font-size: 0.9rem;
    }

        .news-meta i {
            margin-right: 5px;
        }

    .news-featured-image {
        margin-bottom: 30px;
        position: relative;
    }

        .news-featured-image img {
            width: 100%;
            border-radius: 8px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

    .image-caption {
        margin-top: 10px;
        font-style: italic;
        color: #7f8c8d;
        text-align: center;
        font-size: 0.9rem;
    }

    .news-body {
        font-size: 1.1rem;
        margin-bottom: 40px;
    }

        .news-body p {
            margin-bottom: 20px;
        }

        .news-body img {
            max-width: 100%;
            height: auto;
            margin: 20px 0;
            border-radius: 4px;
        }

        .news-body h2, .news-body h3 {
            color: #2c3e50;
            margin: 30px 0 15px 0;
        }

    .news-tags {
        margin: 30px 0;
        padding: 15px 0;
        border-top: 1px solid #eee;
        border-bottom: 1px solid #eee;
    }

        .news-tags a {
            color: #3498db;
            text-decoration: none;
            margin-right: 8px;
        }

            .news-tags a:hover {
                text-decoration: underline;
            }

    .news-social-share {
        margin: 30px 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .news-social-share span {
            font-weight: 500;
        }

    .social-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        color: white;
        text-decoration: none;
        transition: transform 0.3s ease;
    }

        .social-btn:hover {
            transform: translateY(-3px);
        }

    .facebook {
        background: #3b5998;
    }

    .twitter {
        background: #1da1f2;
    }

    .linkedin {
        background: #0077b5;
    }

    .zalo {
        background: #0180c7;
    }

    .btn-back {
        display: inline-block;
        padding: 10px 25px;
        background: #3498db;
        color: white;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 1rem;
    }

        .btn-back:hover {
            background: #2980b9;
            color: white;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .news-detail-title {
            font-size: 1.6rem;
        }

        .news-meta {
            flex-direction: column;
            align-items: flex-start;
            gap: 8px;
        }
    }
</style>

@section scripts {
    <!-- Font Awesome cho icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- Script cho chia sẻ mạng xã hội có thể thêm vào đây -->
}