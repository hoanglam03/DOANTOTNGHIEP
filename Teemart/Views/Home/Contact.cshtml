@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact-hero" style="background-image: url('/Assets/Client/img/contact/contact-hero.jpg'); background-size: cover; background-position: center; height: 350px; position: relative; margin-bottom: 60px;">
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.6);"></div>
    <div class="container h-100 d-flex align-items-center">
        <div class="text-white position-relative z-index-1">
            <h1 class="display-4 fw-bold">Liên Hệ Với Chúng Tôi</h1>
            <p class="lead">Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn</p>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-5 mb-5 mb-lg-0">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-body p-5">
                    <h3 class="fw-bold mb-4 text-center">Thông Tin Liên Hệ</h3>

                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="fa fa-map-marker-alt text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Địa Chỉ</h5>
                            <p class="mb-0">
                                Ng. 60 P. Nguyên Xá, Minh Khai, Bắc Từ Liêm, Hà Nội, Việt Nam
                            </p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="fa fa-phone text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Điện Thoại</h5>
                            <p class="mb-0">0389 254 003</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="fa fa-envelope text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Email</h5>
                            <p class="mb-0">2003hoangvanlam@gmail.com</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="fa fa-clock text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Giờ Làm Việc</h5>
                            <p class="mb-0">Thứ Hai - Thứ Sáu: 8:00 - 17:30<br>Thứ Bảy: 8:00 - 12:00</p>
                        </div>
                    </div>

                    <div class="mt-5 text-center">
                        <h5 class="mb-3">Kết Nối Với Chúng Tôi</h5>
                        <div class="d-flex justify-content-center">
                            <a href="#" class="btn btn-outline-primary rounded-circle me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="btn btn-outline-primary rounded-circle me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="btn btn-outline-primary rounded-circle me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="#" class="btn btn-outline-primary rounded-circle" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    <h3 class="fw-bold mb-4 text-center">Gửi Tin Nhắn Cho Chúng Tôi</h3>
                    <p class="text-center mb-4">Hãy điền thông tin của bạn vào mẫu dưới đây, chúng tôi sẽ liên hệ lại trong thời gian sớm nhất</p>

                    <form method="post" action="#">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label fw-semibold">Họ và tên <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-lg" id="name" placeholder="Nhập họ tên" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label fw-semibold">Địa chỉ Email <span class="text-danger">*</span></label>
                                <input type="email" class="form-control form-control-lg" id="email" placeholder="Nhập email" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label fw-semibold">Số điện thoại</label>
                            <input type="tel" class="form-control form-control-lg" id="phone" placeholder="Nhập số điện thoại">
                        </div>

                        <div class="mb-3">
                            <label for="subject" class="form-label fw-semibold">Tiêu đề <span class="text-danger">*</span></label>
                            <input type="text" class="form-control form-control-lg" id="subject" placeholder="Nhập tiêu đề" required>
                        </div>

                        <div class="mb-4">
                            <label for="message" class="form-label fw-semibold">Nội dung <span class="text-danger">*</span></label>
                            <textarea class="form-control form-control-lg" id="message" rows="5" placeholder="Viết nội dung liên hệ..." required></textarea>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5">Gửi Liên Hệ</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-5">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-0">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3369.543848308607!2d105.7372520747151!3d21.0539959869124!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMjHCsDAzJzE0LjQiTiAxMDXCsDQ0JzIzLjQiRQ!5e1!3m2!1svi!2s!4v1747297895936!5m2!1svi!2s" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>